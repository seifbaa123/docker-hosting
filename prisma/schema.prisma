generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model DockerImages {
    id         Int          @id @default(autoincrement())
    name       String
    hasBuild   Boolean
    Containers Containers[]
}

model Containers {
    id          Int          @id @default(autoincrement())
    containerID String
    image       DockerImages @relation(fields: [imageId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    imageId     Int
}
